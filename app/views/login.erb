<div id="logins" class="row ta-c debug">
  <div class="col span-6-t span-6-d debug">
    <a id="login">login</a>
  </div>
  <div class="col span-6-t span-6-d debug">
    <a id="register">register</a>
  </div>
</div>

<div id="login-container" class="ds-no debug">
  <div class="row ta-c debug">
    <h3 class="debug">
      login to jabr
    </h3>
  </div>
  <div class="row ta-c debug">
    <form id="login-form" method="post" action="/sessions">
      <label class="label" for="username">username</label><br>
      <input type="text" name="username" placeholder="jabr_monkey">
      <br><br>
      <label class="label" for="password">password</label><br>
      <input type="password" name="password" placeholder="password1234">
      <br><br>
      <input type="submit" value="start jabr-ing"><br>
    </form>
  </div>
  <div class="row ta-c debug">
    <h5 class="debug">
      not registered?
    </h5>
    <a id="register-link" class="fs-xs">click here</a>
  </div>
</div>

<div id="register-container" class="ds-no debug">
  <div class="row ta-c debug">
    <h3 class="debug">
      register to jabr
    </h3>
  </div>
  <div class="row ta-c debug">
    <form id="register-form" method="post" action="/users">
      <label class="label" for="username">username</label><br>
      <input type="text" name="username" placeholder="jabr_monkey">
      <br><br>
      <label class="label" for="password">password</label><br>
      <input type="password" name="password" placeholder="password1234">
      <br><br>
      <input type="submit" value="start jabr-ing"><br>
    </form>
  </div>
  <div class="row ta-c debug">
    <h5 class="debug">
      already a member?
    </h5>
    <a id="login-link" class="fs-xs">click here</a>
  </div>
</div>